generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Checkout {
  id          Int      @id @default(autoincrement())
  checkoutId  String   @unique
  email       String
  firstName   String?
  lastName    String?
  recoveryUrl String?
  cartValue   Float
  currency    String
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([email])
  @@index([status, createdAt])
}

model Order {
  id        Int      @id @default(autoincrement())
  orderId   String   @unique
  email     String
  totalPrice Float
  currency  String
  createdAt DateTime @default(now())

  @@index([email])
}

model Customer {
  id                 Int      @id @default(autoincrement())
  shopifyCustomerId  String   @unique
  email              String   @unique
  firstName          String?
  lastName           String?
  createdAt          DateTime @default(now())

  @@index([email])
}
